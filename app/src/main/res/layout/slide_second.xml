<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slide2_color">


    <ImageView
        android:id="@+id/slide2_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/park_find"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="120dp"/>

    <TextView
        android:id="@+id/slide2_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slide2_title"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_below="@id/slide2_image"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/slide2_desc_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slide2_desc"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:layout_below="@id/slide2_title_text"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        />
</RelativeLayout>